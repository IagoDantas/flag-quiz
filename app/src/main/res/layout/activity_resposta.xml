<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RespostaActivity">

    <LinearLayout
        android:layout_width="349dp"
        android:layout_height="664dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgResposta"
            android:layout_width="match_parent"
            android:layout_height="269dp"
            app:srcCompat="@drawable/acertou" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="130dp" />

        <TextView
            android:id="@+id/lblNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/lblResposta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Acertou!"
            android:textSize="34sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <Button
            android:id="@+id/btnJogarNovamente"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:backgroundTint="#1B3473"
            android:fontFamily="@font/poppins_black"
            android:onClick="btnJogarNovamenteOnClick"
            android:text="Jogar Novamente"
            android:textColor="@color/white"
            android:textColorHighlight="#FFFFFF"
            app:cornerRadius="@android:dimen/notification_large_icon_width" />

        <Button
            android:id="@+id/btnTelaPrincipal"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:backgroundTint="#1B3473"
            android:fontFamily="@font/poppins_black"
            android:onClick="btnTelaPrincipalOnClick"
            android:text="Tela Principal"
            android:textColor="@color/white"
            android:textColorHighlight="#FFFFFF"
            app:cornerRadius="@android:dimen/notification_large_icon_width" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>